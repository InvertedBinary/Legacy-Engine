	}
	
	public void unload(UI_Menu menu) {
		super.unload(menu);
		suspend = this.SUS_NON;
	}
	
	public void update() {
		//if (btn_gears.clicked) {
		//Game.getGame().Menus.load(Game.getGame().Menus.settingsMenu);
		//}
	}
	
	public void render(Screen screen) {
		screen.renderAlphaSprite(bg, x, y);
	}
	

}
