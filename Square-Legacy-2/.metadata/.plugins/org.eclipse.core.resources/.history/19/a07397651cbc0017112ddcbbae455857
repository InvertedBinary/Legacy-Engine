package com.IB.SL.graphics.UI.menu;

import com.IB.SL.Boot;
import com.IB.SL.graphics.Screen;
import com.IB.SL.graphics.Sprite;
import com.IB.SL.graphics.UI.part.TextBox;

public class ConsoleMenu extends UI_Menu {

	transient public TextBox cmd = new TextBox(5, 5, 266, 19, Boot.get().key, -1, false);


	public ConsoleMenu(int x, int y, Sprite bg) {
		this.bg = bg;
		init(x, y);
	}
	
	public void update() {
		if (cmd == null) {
			cmd.desc = "Command:";
			cmd.useCmds = true;
			cmd.acceptable.add("!");
			cmd.acceptable.add(",");
			cmd.acceptable.add(".");
		}
			cmd.update();
	}
	
	public void render(Screen screen) {
		cmd.render(screen);
	}
	

}
