package com.IB.SL.graphics.UI.menu;

import com.IB.SL.Boot;
import com.IB.SL.graphics.Screen;
import com.IB.SL.graphics.Sprite;
import com.IB.SL.graphics.UI.part.TextBox;

public class ConsoleMenu extends UI_Menu {

	transient public TextBox cmd;

	public ConsoleMenu(int x, int y, Sprite bg) {
		this.bg = bg;
		init(x, y);
	}
	
	public void load(UI_Menu menu) {
		Boot.get().getPlayer().input.suspendInput();
		super.load(menu);
	}
	
	public void unload(UI_Menu menu) {
		super.unload(menu);
		Boot.get().getPlayer().input.resumeInput();
	}
	
	
	public void update() {
		if (enabled) {
		if (cmd == null) {
			cmd = new TextBox(5, 5, 266, 19, Boot.get().key, -1, false);
			cmd.desc = "Command:";
			cmd.useCmds = true;
			cmd.acceptable.add("!");
			cmd.acceptable.add(",");
			cmd.acceptable.add(".");
			ui.addUI(cmd);

		}
		cmd.update();
		System.out.println(Boot.get().getPlayer().input.suspended);
		}
	}
	
	public void render(Screen screen) {
		if (cmd != null) {
		cmd.render(screen);
		}
	}
}
